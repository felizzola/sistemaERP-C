@{
    ViewData["Title"] = "Erp Basico";
}

<div class="container">
    @*<div class="text-center">
        <h1 class="display-4">Bienvenidxs al</h1>
    </div>
    <br />*@
    <div class="container">
        <div align="center">
            <img src="/img/ERP0.png" height="150" class="img-rounded text-center">
        </div>
    </div>

    <div class="container">

        <div class="bd-example">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">

                    <form class="carousel-item active" asp-action="Buscar" asp-controller="Empleados" method="get" novalidate="novalidate">
                        <img class="d-block w-100" alt="First slide [800x400]" src="~/img/Organigrama.jpg" data-holder-rendered="true">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="text-dark" style="background:rgba(255, 255, 255, 0.7)">Listar todos los empleado y por cada uno ver en sus detalles, como así también, realizar modificaciones en los mismos</h5>
                            <p class="text-dark">
                                <select class="form-control search-input" name="gerenciaId" asp-items="ViewBag.Gerencias">
                                    <option value=""></option>
                                </select>
                            </p>
                            <button type="submit" class="btn btn-primary">
                                Listar
                            </button>
                        </div>
                    </form>

                    <form class="carousel-item" asp-action="ListadoGastos" asp-controller="Gastos" method="get" novalidate="novalidate">
                        <img class="d-block w-100" alt="Second slide [800x400]" src="~/img/Gastos2.jpg" data-holder-rendered="true">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="text-dark" style=" background: rgba(255, 255, 255, 0.7)">
                                Gastos
                            </h5>

                            <p class="text-dark" style=" background: rgba(255, 255, 255, 0.7)">
                                Listar todos los gastos de todos los empleados en forma decreciente por fecha
                                y ordenados de manera creciente por Apellido y Nombre.
                            </p>
                            <button type="submit" class="btn btn-primary">
                                Listar
                            </button>
                        </div>
                    </form>
                    @if ((User.IsInRole(nameof(Rol.Administrador)) || User.IsInRole(nameof(Rol.Rrhh))) && (User.Identity.IsAuthenticated))
                    {
                        <form class="carousel-item" asp-action="ListadoSueldos" asp-controller="Empleados" method="get" novalidate="novalidate">
                            <img class="d-block w-100" alt="Third slide [800x400]" src="~/img/Sueldos2.jpg" data-holder-rendered="true">
                            <div class="carousel-caption d-none d-md-block">
                                <h5 class="text-dark" style=" background: rgba(255, 255, 255, 0.7)">Sueldos de empleados.</h5>
                                <p class="text-dark" style=" background: rgba(255, 255, 255, 0.7)">
                                    Listar los empleados, con sueldo ordenado decrecientemente por el concepto y luego creciente por Apellido y Nombre
                                </p>
                                <button type="submit" class="btn btn-primary">
                                    Listar
                                </button>
                            </div>
                        </form>

                        <form class="carousel-item" asp-action="ListadoGastosTotales" asp-controller="Gastos" method="get" novalidate="novalidate">
                            <img class="d-block w-100" alt="Third slide [800x400]" src="~/img/SueldosT2.jpg" data-holder-rendered="true">
                            <div class="carousel-caption d-none d-md-block">
                                <h5 class="text-dark" style=" background: rgba(255, 255, 255, 0.7)">Gastos Totales.</h5>
                                <p class="text-dark" style=" background: rgba(255, 255, 255, 0.7)">
                                    Listar los montos totales de gastos por cada gerencia.
                                </p>
                                <button type="submit" class="btn btn-primary">
                                    Listar
                                </button>
                            </div>
                        </form>
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <svg color="#000000" width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-caret-left-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path d="M3.86 8.753l5.482 4.796c.646.566 1.658.106 1.658-.753V3.204a1 1 0 0 0-1.659-.753l-5.48 4.796a1 1 0 0 0 0 1.506z" />
                    </svg>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <svg color="#000000" width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-caret-right-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12.14 8.753l-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z" />
                    </svg>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>