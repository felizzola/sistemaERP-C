
@{
    ViewData["Title"] = "Ingresar";
}

    <div class="text-center"  style="padding-top: 150px;">
   


    <div class="row justify-content-center">
        <div class="col-lg-offset-4 col-md-4 border rounded py-5 px-5 bg-light">
            <h1 class="pb-5">Bienvenido al Systema ERP</h1>
            <form method="post" asp-action="Ingresar">
                <div class="text-danger">
                    @ViewBag.Error
                </div>
                <div class="form-group">
                    <input name="email" class="form-control mb-0" type="text" value="@ViewBag.email" placeholder="Email" />
                </div>
                <div class="form-group">
                    <input name="password" class="form-control mt-0" type="password" placeholder="Password" />
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="radio" name="rol" id="rolCliente" value="@Rol.Empleado" checked>
                    <label class="form-check-label" for="rolCliente">
                        @Rol.Empleado.ToString()
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="rol" id="rolAdministrador" value="@Rol.Administrador">
                    <label class="form-check-label" for="rolAdministrador">
                        @Rol.Administrador.ToString()
                    </label>
                </div>
                <br />
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        Login
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
