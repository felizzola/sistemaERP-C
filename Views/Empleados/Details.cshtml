@model BENT1C.Grupo5.Entidades.Empleado

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>Empleado</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dni)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dni)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ObraSocial)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ObraSocial)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Legajo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Legajo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmpleadoActivo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmpleadoActivo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Foto.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefonos)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (Telefono telefono in Model.Telefonos)
                {
                    <li><b>@telefono.TipoTelefono.Nombre</b>: @telefono.Numero</li>
}
            </ul>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaAlta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaAlta)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-outline-primary">Volver</a>
</div>
